#
# bspwm hotkeys
#

super + alt + Escape
    pkill -x panel; pkill -x tilda; bspc quit

super + a
    bspc window -c || bspc desktop -r #&& sleep .2 && bspc desktop -r || bspc desktop -r

super + t
    bspc desktop -l next

super + T
    bspc config -d focused window_gap 0

super + b
    bspc desktop -B

super + {s,f}
    bspc window -t {floating,fullscreen}

super + {c,Tab}
    bspc {window,desktop} -f last

super + apostrophe
    bspc window -s last

super + {o,i}
    bspc control --record-history off; \
    bspc window {older,newer} -f; \
    bspc control --record-history on

super + y
    bspc window -w last.manual

super + m
    bspc window -s biggest

super + {_,shift + }{j,k,l,semicolon}
    bspc window -{f,s} {left,down,up,right}

super + {_,shift + }w
    bspc window -f {next,prev}

super + {comma,period}
    bspc desktop -C {backward,forward}

super + bracket{left,right}
    bspc desktop -f {prev,next}

super + ctrl + {j,k,l,semicolon}
    bspc window -p {left,down,up,right}

# super + ctrl + {_,shift + }space
#     bspc {window -p cancel,desktop -c}

super + alt + {j,k,l,semicolon}
    bspc window -e {left -10,down +10,up -10,right +10}

super + alt + shift + {j,k,l,semicolon}
    bspc window -e {right -10,up +10,down -10,left +10}

super + ctrl + {1-9}
    bspc window -r 0.{1-9}

super + {_,shift + }{1-9,0}
    bspc {desktop -f,window -d} ^{1-9,10}

~button1
    bspc pointer -g focus

super + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
    bspc pointer -t %i %i

super + @button{1-3}
    bspc pointer -u


#
# wm independent hotkeys
#
super + Return
    urxvt
super + shift + Return
	urxvt -e zsh -c 'bspc window -t floating && zsh' #&& xdo move -x 600 -y 400
ctrl + backslash
    urxvt -e ranger /data/Swinburne/
super + p
    dmenu_run -sb \#ae81ff -sf \#000000 -nb \#222222 -h 19 -dim .6
super + slash
    /home/aish/.config/dmenu/search
super + r
	/home/aish/.config/dmenu/renamedesk
super + backslash
	/home/aish/.config/dmenu/adddesk
super + shift + backslash
	/home/aish/.config/dmenu/adddesk num
super + ctrl + shift + l
	bspc window -t locked
super + ctrl + shift + s
	bspc window -t sticky
super + alt + comma
	bspc desktop -R -90
super + alt + period
	bspc desktop -R 90
super + shift + bracket{left,right}
    bspc desktop -s {prev,next}
ctrl + {percent,quotedbl}
	bspc window -p {right,down} && urxvt
Print
    escrotum -s '/data/scrot/screenshot_%d_%m_%Y_%I_%M%p.png' && twmnc 'Screenshot saved at' $(date +'/data/scrot/screenshot_%d_%m_%Y_%I_%M%p.png') && mplayer /data/scrot/scrotsound.mp3
Pause
    gromit-mpx -k Pause -a
# MPD
XF86AudioPlay
    ncmpcpp toggle
ctrl + XF86AudioPlay
    ncmpcpp stop
XF86AudioLowerVolume
    ncmpcpp volume -2
XF86AudioRaiseVolume
    ncmpcpp volume +2
XF86AudioMute
    amixer set Master toggle
ctrl + Delete
    ncmpcpp prev
ctrl + KP_Add
    ncmpcpp next
super + space
    wmctrl -a:ACTIVE -e 1,650,350,600,400
# apps
super + c
    chromium &
# make sxhkd reload its configuration files:
super + Escape
    pkill -USR1 -x sxhkd && xrdb -merge ~/.Xresources
alt + minus
	bspc config -d focused window_gap $((`bspc config -d focused window_gap` + 4 ))
alt + equal
	bspc config -d focused window_gap $((`bspc config -d focused window_gap` - 4 ))
# Move floating windows (requires baskerville's xdo)
alt + {j,semicolon,l,k}
	xdo move {-x -20,-x +20,-y -20,-y +20}

# Resize floating windows
alt + shift + {j,semicolon,l,k}
	xdo resize {-w -20,-w +20,-h -20,-h +20} && bspc window -e {left -10,down +10,up -10,right +10} || {right -10,up +10,down -10,left +10}
